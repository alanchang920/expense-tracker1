<div class="container" style="width: 800px;">
  <div class="row mt-3">
    <div class="col">
      <div class="dropdown d-flex justify-content-center">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false" style="width: 600px;">
          類別
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          {{#each categoryies}}
          <a class="dropdown-item" href="{{ this.url }}">
            {{ this.categoryName }}
          </a>
          {{/each}}
          <a class="dropdown-item" href="/">
            不分類別
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col">
      <h3>總金額：</h3>
    </div>
    <div class="col d-flex justify-content-center">
      <h3 style="vertical-align: middle;">{{ totalAmount }}</h3>
    </div>
  </div>
  <div class="row mt-3">
    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item" style="width: 800px;">
        <div class="row">
          <div class="col-1 pr-0" style="font-size: 1.8rem;">
            {{{ this.icon }}}
          </div>
          <div class="col-6">
            <div class="row">
              <div class="col">
                <h4 style="display: inline; vertical-align: middle;">
                  {{ this.name }}
                </h4>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <span>{{ this.showDate }}</span>
              </div>
            </div>
          </div>
          <div class="col-2 d-flex align-items-center justify-content-end">
            <h4 style="display: inline; vertical-align: middle;">
              {{ this.amount }}
            </h4>
          </div>
          <div class="col-3 d-flex align-items-center justify-content-end">
            <a class="btn btn-success mr-2" href="./expense/{{ this._id }}">
              修改
            </a>
            <form action="/expense/{{ this._id }}?_method=DELETE" method="POST" onsubmit="return deleteAlert()"
              style="display: inline;">
              <button class="btn btn-danger" type="submit">
                刪除
              </button>
            </form>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
    <div class="text-center mt-3 mb-3" style="width: 800px;">
      <a href="/records/new" class="btn btn-outline-dark">新增支出</a>
    </div>
  </div>
</div>
